div(class='post fourcol')
  if(picture.headline)
    h1=picture.headline
    if(picture.location_name)
      h3 Happened @ {picture.location_name}
    p #{picture.distance} meters
    p #{picture.latitude} latitude
    p #{picture.longitude} longitude
  else
    h1 HEADLINE OF PICTURE
    p PICTURE LOCATION
    p #{picture.distance} meters
    p #{picture.latitude} latitude
    p #{picture.longitude} longitude
  img(src=picture.name, class='stream')
  div
    div(class='vote', id=picture._id, points='1')
      img(class='voteButton up', src='images/up.png')
    div(class='vote', id=picture._id, points='-1')
      img(class='voteButton down', src='images/down.png')
    p(class='votePoints') #{picture.points}
    a(href="https://twitter.com/share", class="twitter-share-button", data-via="me", data-url=picture.url(req), data-hashtags="breakit", data-lang="fi") Tweet
