extends layout
block contents
  div(class='post comment')
    if(picture.headline)
      div.headline
        p=picture.headline
      div.location
        img(src='/images/clock.png') 
        p #{time}  #{dist} away @ #{loc}
    else
      div.headline
        p HEADLINE OF PICTURE
      div.location
        img(src='/images/clock.png') 
        p #{time}  #{dist} away @ #{loc}
    div.stream
      img(src='../'+'#{picture.name}')
    div.footer_bar
      div.controls
        img(src='/images/up.png')
        img(src='/images/down.png')
        img(src='/images/share.png')
      p.story=picture.story
    div.comments
      table
        for comment in picture.comments
          tr
            td
              img(src='/images/user.png')
            td
              h1=comment.date
              p=comment.comment
      form(action='/comment', method='post')
        input(type='hidden', name='pic_id', value='#{picture._id}')
        label Add your comment
        br
        textarea(name='comment', cols='34', rows='4')
        br
        input(type='Submit', value='Comment')
