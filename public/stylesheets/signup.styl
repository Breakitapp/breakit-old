html
	background: url(../images/bg/bg.jpg) no-repeat center center fixed
	-webkit-background-size: cover
	-moz-background-size: cover
	-o-background-size: cover
	background-size: cover
	overflow-x: hidden

body
	font-family: calibri, helvetica

#signup_box
	margin-top: 30px
	margin-left: auto
	margin-right: auto
	width: 500px
	padding: 20px


#breakit_logo
	width: inherit

	img
		width: 450px
		opacity: 0.6

#signup_tab
	width: 100%
	margin-top: -60px
	padding-right: 40px
	margin-left: -10px
	overflow: hidden
	height: 100%
	background-color: #333333
	opacity: 0.7
	font-family: arial
	color: #ffffff

#story_tab
	padding-left: 20px
	width: 60%
	float: left

#signup_form
	width: 35%
	height: inherit
	padding: 10px 0 0 10px
	margin-right: -30px
	float: right
	background-color: #000000

	form
		font-size: 20px
		font-variant: small-caps

		label
			margin-right: 5px
			padding: 5px

			#submit
				float: right
