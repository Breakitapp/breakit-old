body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: #00B7FF

.stream
  max-width: 265px
  margin-left: auto
  margin-right: auto

#nav-top-line
  height: 18px
  background: -webkit-linear-gradient(top, #8f1b1b, #d03636)
  background: -moz-linear-gradient(top, #8f1b1b, #d03636)

#nav-bottom-line
  min-height: 58px
  background: -webkit-linear-gradient(top, #fff, #ededed)
  background: -moz-linear-gradient(top, #fff, #ededed)
  box-shadow: 0 6px 0 #d1d1d1
  -moz-box-shadow: 0 6px 0 #d1d1d1
  -webkit-box-shadow: 0 6px 0 #d1d1d1

#nav-logo
  margin-left: 60px
  max-height: 58px
  float: left

.navbutton
  height: 58px
  float: left
  border: 1px solid red

.post
  width: 273px
  background: #fff
  border: 1px solid #c8c8c8
  margin: 16px
  float: left
  display: inline

#footer
 clear: both

.voteButton
 max-width: 20spx
 float: left
 padding: 0 10px 0 0